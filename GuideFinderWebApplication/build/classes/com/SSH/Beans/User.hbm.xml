<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.SSH.Beans">  
    <class name="User" table="user">  
        <id name="ID" column="User_ID">  
            <generator class="native"></generator>  
        </id>  
        <property name="email" column="email" type="java.lang.String"  
            not-null="true" length="45"></property>  
        <property name="pwd" column="pwd" type="java.lang.String"  
            not-null="true" length="45" />  
        <property name="first_name" column="first_name" type="java.lang.String"
            not-null="true" length="45" />  
        <property name="last_name" column="last_name" type="java.lang.String" not-null="true"
        length="45"/>
       
    </class>  
</hibernate-mapping> 