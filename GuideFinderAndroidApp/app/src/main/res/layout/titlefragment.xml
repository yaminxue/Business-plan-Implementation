<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="@dimen/title_height"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/magnifier"
        android:layout_marginLeft="@dimen/Imagebutton_marginleft2"/>

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/contact"
        android:layout_marginLeft="@dimen/Imagebutton_marginleft3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GuideFinder"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/TextView_marginleft1"
        android:layout_marginStart="@dimen/TextView_marginStart1" />

</RelativeLayout>